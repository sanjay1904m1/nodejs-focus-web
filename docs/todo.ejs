                              <th>Select</th>
                              <th>Task</th>
                              <th>Category</th>
                            <th>due date</th>
                            </tr>
                          </thead>
                        <% for(let i of task) { %>
                            

<tr>

                               <td> <input type="checkbox" name="<%= i._id %>" ></td>
                               <td> <p id="task-description"><%= i.description %></td>
                                <td><p id="task-category"></p>: <%= i.category %></td>
                                <td><p id="due-date">: <%= i.date %></p></td>
</tr>
                    

                        <% } %>
                            
                

                           
</table>
<div  position = "center"><input type="submit" class="btn btn-danger" value="DELETE TASK">
